<div class="row-fluid">
	<div class="span12">
		<% size, count = @categories.size, 0 %>
		<% @categories.each do |category|%>
		  <div class="span4 <%= 'margin_140' if count == 5 %><%= 'margin_140_job' if count == 6 %><%= 'margin_130' if count == 7 %> "><b><%= category.name%></b>
		  	<%category.subcategories.each do |sub_category|%>
			  	<div>
			  	  <%= link_to sub_category.name, ""%>
			  	</div>
		  	<%end%>
		  </div>
		  <% count += 1 %>
		<%end%>
	</div>
</div>