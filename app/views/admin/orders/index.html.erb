<h1>Listing orders</h1>

<table>
  <tr>
    <th>User Name</th>
    <th>E-mail</th>
    <th>Address</th>
    <th>Order Date-Time</th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td align='center'><%= order.user.name %></td>
    <td align='center'><%= order.user.email %></td>
    <td align='center'><%= order.user.address %></td>
    <td align='center'><%= order.created_at.strftime("%d-%B-%Y") %>, <%= order.created_at.strftime("%H:%M") %></td>
    <td align='center'><%= link_to 'Show', [:admin, order] %></td>
    <td align='center'><%= link_to 'Destroy', [:admin, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

