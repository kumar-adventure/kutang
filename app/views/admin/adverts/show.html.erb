<% end %>

<% if @advert.event_date_from && @advert.event_time_to %>
    <p>
      <b>Event Date :</b>
      From <%= @advert.event_date_from %> to <%= @advert.event_date_to %>
    </p>
<% end %>

<% if @advert.event_date_from && !@advert.event_time_to %>
    <p>
      <b>Date of Birth :</b>
      <%= @advert.event_date_from %>
    </p>
<% end %>

