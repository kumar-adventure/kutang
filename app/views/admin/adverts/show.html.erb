<p id="notice"><%= notice %></p>

<p>
  <b>Featured:</b>
  <%= @advert.featured %>
</p>

<p>
  <b>Approved:</b>
  <%= @advert.approved %>
</p>

<p>
  <b>Title:</b>
  <%= @advert.title %>
</p>

<% if @advert.user_id %>
 <p>
   <b>User Name</b>
   <%= @advert.user.name %>
 </p>
<% end %>

<p>
  <b>Category:</b>
  <%= @advert.category.name %>
</p>

<p>
