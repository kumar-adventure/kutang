    <p>
      <b>Ad Type</b>
      <%= @advert.ad_type%>
    </p>
<% end %>

<% if @advert.pricing_strategy %>
    <p>
      <b>Price :</b>
      <%= @advert.pricing_strategy == 'Price' ? @advert.price : @advert.pricing_strategy == 'Free' ? 'Free' : @advert.pricing_strategy == 'Please Contact' ? 'Please Contact' : 'Swap/Trade' %>
    </p>
<% end %>

<% if @advert.sale_by %>
 <p>
