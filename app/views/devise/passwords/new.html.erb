<div id="product-page" style="background-color: #F8F9E9" >
  <div class="padding">
    <div class="gray_box" style="font-size:9pt;width: 450px;margin: 70px auto 0 auto;">
      <div class="heading">Forgot Password</div>
      <div class="inner-page" >
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>

          <div>
            <p>Please enter your email address below and we will send you an email to change your password.
              Donâ€™t forget that you can still post Ads and discussion messages without being signed in.</p>
          </div>
          <div style="margin-bottom: 10px;">
            <b>Email Address :</b><br />
            <%= f.email_field :email, :autofocus => true, class: "input1" %>
          </div>

          <div><%= f.submit("Send me reset password instructions", style: "color:black;background-color:#DBFF83;border:thin blue solid;text-decoration:none;") %></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
